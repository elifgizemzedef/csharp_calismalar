@model IQueryable<WebApplication2.Models.Book>

@{
    ViewData["Title"] = "AddBook";
}

<h1>Books</h1>


<p>Use this page to detail your site's privacy policy.</p>
<div class="bg-dark text-white m-5 p-4 border-1">
    <table class="table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Class</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Author
                    </td>
                    <td>
                        @item.Class
                    </td>
                </tr>
            }
       

        </tbody>
        </tbody>
    </table>
</div>

